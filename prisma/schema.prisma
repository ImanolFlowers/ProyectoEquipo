generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}



model User{
  // el cuid genera una cadena larga 
  id String @id @default(cuid())
  name String
  username String @unique
  email String @unique
  password String
  active Boolean @default(true)

  // timestamps
  // cuando fue creado y actualizacion
  createAt DateTime @default(now())
  updateAt DateTime?

}